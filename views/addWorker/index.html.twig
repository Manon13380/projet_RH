{% extends "base.html.twig" %}
{% block title %}
	<title>GestionRH - Ajout d'employé</title>
{% endblock %}
{% block header %}
{% include "layouts/_headerDashboard.html.twig" %}
{% endblock %}

{% block main %}
<main id="signupMain">
		<div class="signup-container">
			<h2>Ajout d'un employé</h2>
			<form action="/addWorker" method="POST" enctype ="multipart/form-data">
				<div class="form-group">
					<label for="image">Photo:</label>
					<input type="file" id="image" name="image" >
				</div>
				<div class="form-group">
					<label for="name">Nom:</label>
					<input type="text" id="name" name="name" required>
				</div>
				<div class="form-group">
					<label for="function">Fonction:</label>
					<input type="text" id="function" name="function" required>
				</div>
				<button  class="buttonInscription">Ajouter</button>
			</form>
		</div>
	</main>
{% endblock %}