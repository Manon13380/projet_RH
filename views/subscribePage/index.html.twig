{% extends "base.html.twig" %}
{% block title %}
	<title>GestionRH - Inscription</title>
{% endblock %}
{% block header %}
	{% include "layouts/_headerSubscribe.html.twig" %}
{% endblock %}
{% block main %}
	<main id="signupMain">
		<div class="signup-container">
			<h2>Inscription</h2>
			<form action="/subscribe" method="post" >
				<div class="form-group">
					<label for="name">Nom de l'entreprise:</label>
					<input type="text" id="name" name="name" required>
					{% if error %}
						<p class="error">{{error.errors.name.message}}</p>
					{% endif %}
				</div>
				<div class="form-group">
					<label for="siretNumber">Num√©ro de SIRET:</label>
					<input type="text" id="siretNumber" name="siretNumber" required>
					{% if error %}
						<p class="error">{{error.errors.siretNumber.message}}</p>
					{% endif %}
				</div>
				<div class="form-group">
					<label for="email">Adresse email:</label>
					<input type="mail" id="mail" name="mail" required>
					{% if error %}
						<p class="error">{{error.errors.mail.message}}</p>
					{% endif %}
				</div>
				<div class="form-group">
					<label for="directorName">Nom du directeur:</label>
					<input type="text" id="directorName" name="directorName" required>
					{% if error %}
						<p class="error">{{error.errors.directorName.message}}</p>
					{% endif %}
				</div>
				<div class="form-group">
					<label for="password">Mot de passe:</label>
					<input type="password" id="password" name="password" required>
					{% if error %}
						<p class="error">{{error.errors.password.message}}</p>
					{% endif %}
				</div>
				<button class="buttonInscription">S'inscrire</button>
			</form>
		</div>
	</main>
{% endblock %}
